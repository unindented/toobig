{
  "budgets": {
    "dist/**/*.js": "4KB",
    "dist/cli/*.js": "8KB",
    "dist": "32KB"
  },
  "reporters": [
    "default",
    [
      "table",
      {
        "template": "markdown",
        "color": false,
        "maxPathLength": 36,
        "output": "toobig/report.md"
      }
    ],
    [
      "json",
      {
        "output": "toobig/report.json"
      }
    ],
    [
      "junit",
      {
        "output": "toobig/report.xml"
      }
    ],
    [
      "tap",
      {
        "output": "toobig/report.txt"
      }
    ]
  ]
}
